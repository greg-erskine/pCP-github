#=========================================================================================
# Busybox httpd
#-----------------------------------------------------------------------------------------
pcp_httpd_query_string() {
	# Process the $QUERY_STRING from httpd

	######################################## DELETE THIS SECTION ####################################################

	# Original string
	greg0=$(echo "$QUERY_STRING")
	echo "<p>0: $greg0</p>"

	# split on &
	greg1=$(echo "$QUERY_STRING" | awk -F'&' '{ for(i=1;i<=NF;i++) { print $i} }')
	echo "<p>1: $greg1</p>"

	# decode
	greg2=$($HTPPD -d "$QUERY_STRING" | awk -F'&' '{ for(i=1;i<=NF;i++) { print $i} }')
	echo "<p>2: $greg2</p>"

	# add trailing "
	greg3=$($HTPPD -d "$QUERY_STRING" | awk -F'&' '{ for(i=1;i<=NF;i++) { printf "%s\" ",$i} }')
	echo "<p>3: $greg3</p>"

	# add " after =
	greg4=$($HTPPD -d "$QUERY_STRING" | awk -F'&' '{ for(i=1;i<=NF;i++) { printf "%s\" ",$i} }' | sed 's/=/="/g')
	echo "<p>4: $greg4</p>"

	######################################## DELETE THIS SECTION ####################################################

	eval $($HTPPD -d "$QUERY_STRING" | awk -F'&' '{ for(i=1;i<=NF;i++) { printf "%s\" ",$i} }' | sed 's/=/="/g')
	[ $DEBUG = 1 ] && echo '<p class="error">[ DEBUG ] $QUERY_STRING: '$QUERY_STRING'</p>'
}

