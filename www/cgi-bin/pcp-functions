	sudo echo dtoverlay=hifiberry-dacplus >> $CONFIGTXT
}

#========================================================================================
# Load the correct modules for HiFiBerry AMP
#----------------------------------------------------------------------------------------
pcp_enable_i2s_amp() {
	pcp_remove_dt
	sudo echo dtoverlay=hifiberry-amp >> $CONFIGTXT
}
